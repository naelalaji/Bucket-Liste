<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="shortcut icon" href="{{asset('img/favicon.png')}}" type="image/x-icon">
        <title>{% block title %}Bucket-List{% endblock %}</title>
        <link rel="stylesheet" href="{{asset('css/style.css')}}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {% block stylesheets %}
            
        {% endblock %}
        <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
        {% block javascriptshead %}
            
        {% endblock %}
    </head>
    {% set menu = { "Accueil":"app_main","About Us":"app_aboutUs","Liste Wish":"app_wish_list","AjouterWish":"app_wish_ajouter" } %}
    <body>
        <div class="grid-container">
            <header>
                <div class="header-top">
                    <div class="first">
                        <img class="logo" src="{{asset('img/logo.png')}}" alt="logo bucket list">
                    </div>
                    <div class="second">
                        <nav>
                            <ul>
                                {% for key,value in menu %}
                                    <li>
                                        {% if value != "#" %}
                                            <a href="{{path(value)}}">
                                                {{key}}
                                            </a>
                                        {% else %}
                                            <a href="#">
                                                {{key}}
                                            </a>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        </nav>
                    </div>
                </div>
                
            </header>
            <main>
                {% block body %}{% endblock %}
            </main>
            <footer>
                  <p>
                    &copy; Bucket-List {{"now"|date("Y")}}
                  </p>
            </footer>
        </div>
        {% block javascriptsbody %}
            
        {% endblock %}        
    </body>
</html>
